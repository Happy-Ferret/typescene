{
    "compilerOptions": {
        "outDir": "../../dist/docs-viewer",
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "strict": true,
        "baseUrl": ".",
        "lib": [ "es5", "dom" ],
        "paths": {
            "@typescene/core": [
                "../../dist/core"
            ],
            "@typescene/core/*": [
                "../../dist/core/*"
            ],
            "@typescene/dom": [
                "../../dist/dom"
            ],
            "@typescene/dom/*": [
                "../../dist/dom/*"
            ]
        }
    },
    "include": [
        "./**.ts"
    ]
}
